@model Contato
@{
    ViewData["Title"] = "Cadastro";
}

<h1>Cadastro de Contato</h1>

<form asp-action="cadastro">
    <div class="margem">

        <div class="mb-3">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cpf">CPF</label>
            <input asp-for="Cpf" class="form-control" />
            <span class="text-danger" asp-validation-for="Cpf"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DataNascimento">Data de Nascimento</label>
            <input asp-for="DataNascimento" class="form-control" />
            <span class="text-danger" asp-validation-for="DataNascimento"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Telefone">Telefone</label>
            <input asp-for="Telefone" class="form-control" />
            <span class="text-danger" asp-validation-for="Telefone"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">Salvar contato</button>

    </div>

</form>

